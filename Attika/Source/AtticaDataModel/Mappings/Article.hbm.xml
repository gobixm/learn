<?xml version="1.0" encoding="utf-8"?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="Infotecs.Attika.AtticaDataModel"
                   namespace="Infotecs.Attika.AtticaDataModel" schema="dbo">
  <class name="Article" table="Articles">
    <id name="Id">
      <generator class="guid" />
    </id>
    <property name="Title" length="100" />
    <property name="Text" />
    <property name="Created" />
    <bag name="Comments" lazy="true" cascade="all">
      <key column="ArticleId" />
      <one-to-many class="Comment" />
    </bag>
  </class>
</hibernate-mapping>