<div class="modal fade" id="shipModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" data-bind="with: CartViewModel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form data-async action='/api/cart/ship' method="POST">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Enter shipping address</h4>
                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <label for="recipient-address" class="control-label">Ship address:</label>
                        <input type="text" class="form-control" id="recipient-address" data-bind="value: Address">
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" data-bind="click: ship">Ship</button>
                </div>
            </form>
        </div>
    </div>
</div>
